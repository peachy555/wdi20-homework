<% if @author.errors %>
  <ul>
    <% @author.errors.full_messages.each do |msg| %>
      <li><<%= msg %></li>
    <% end %>
  </ul>
<% end %>

<h1>Add a New Author</h1>
<%= form_for @author do |a| %>
  <p>
    <%= a.label "First Name" %>
    <%= a.text_field :first_name %>
  </p>
  <p>
    <%= a.label "Last Name" %>
    <%= a.text_field :last_name %>
  </p>
  <p>
    <%= a.label "Image Source" %>
    <%= a.text_field :image_src %>
  </p>
  <%= a.submit %>
<% end %>
