<% if @user.errors %>
  <ul>
    <% @user.errors.full_messages.each do |m| %>
      <li><%= m  %></li>
    <% end %>
<% end %>
<%= form_for @user do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
    <%= f.submit "Sign up", class: "ui primary button" %>
<% end %>
